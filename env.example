# Discord Bot Token - Lấy từ https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# OpenAI API Key - Lấy từ https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB Configuration
# Local MongoDB: mongodb://localhost:27017
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=tarot_bot

# Chat Analyzer Configuration
# Bật/tắt Chat Analyzer (true/false)
CHAT_ANALYZER_ENABLED=false
# ID của channel cần theo dõi (lấy từ Discord Developer Tools)
TARGET_CHANNEL_ID=your_target_channel_id_here

# Chat Analyzer Prompt Configuration
# Prompt tùy chỉnh cho việc phân tích chat (để trống để dùng prompt mặc định)
CHAT_ANALYZER_PROMPT=

# Chat Analyzer Notification Configuration
# Danh sách user_id sẽ nhận thông báo khi có đánh giá HIGH (phân cách bằng dấu phẩy)
NOTIFICATION_USER_IDS=user_id_1,user_id_2,user_id_3
# Bật/tắt thông báo cho user (true/false)
NOTIFICATION_ENABLED=true